{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "importHelpers": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "coverage",
    "build",
    "__test__",
    "bin",
    "jest.config.js"
  ],
  "include": [
    "pages",
    "src"
  ]
}
